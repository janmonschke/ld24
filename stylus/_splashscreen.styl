.splash
  position absolute
  top 0
  left 0
  width 640px
  height 480px

  display none

  .logo
    position absolute
    top 92px
    left 190px
    font bold 48px 'Enriqueta', sans

    text-transform uppercase

    color #e8e8e8

    text-shadow 0 0 9px rgba(black, 0.41)
    -webkit-text-shadow 0 0 9px rgba(black, 0.41)
    -moz-text-shadow 0 0 9px rgba(black, 0.41)
    -o-text-shadow 0 0 9px rgba(black, 0.41)
    -ms-text-shadow 0 0 9px rgba(black, 0.41)

  ul.menu
    width 300px
    text-align center

    position absolute
    top 250px
    left 50%

    margin-left -150px

    li
      font bold 24px 'Enriqueta', sans
      color white
      cursor pointer

      &.about
        margin-top 30px
        font-size 18px

      &.active
        color #a8b4e3
        text-shadow 0 0 7px rgba(#233882, 0.75)
        -webkit-text-shadow 0 0 7px rgba(#233882, 0.75)
        -moz-text-shadow 0 0 7px rgba(#233882, 0.75)
        -o-text-shadow 0 0 7px rgba(#233882, 0.75)
        -ms-text-shadow 0 0 7px rgba(#233882, 0.75)

  .copyright
    font bold 12px 'Enriqueta', sans
    text-align center
    position absolute
    bottom 10px

    width 100%
    text-align center
    color white

    a
      color #a8b4e3
      text-decoration none
      &:hover
        color #6d7ec2
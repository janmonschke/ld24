@import _reset
@import _mixins

html, body
  width 100%
  height 100%
  background black

*
  -webkit-font-smoothing antialiased

.canvas-wrapper
  width 640px
  height 480px
  position absolute
  top 50%
  left 50%

  margin-left -320px
  margin-top -240px

  border 3px solid rgba(white, 0.2)

  background url('../assets/images/background.png') no-repeat center center

  canvas
    width 640px
    height 480px

  .debug
    position absolute
    top 0
    right 0
    padding 3px
    font normal 10px Verdana
    color red
    text-align right

    display none

  .level-progress
    width 461px
    height 29px

    background url('../assets/images/level-progress.png') no-repeat top left

    position absolute
    bottom 10px
    left 50%
    margin-left -230px

    display none

    opacity 0.6

    .level
      font bold 12px Verdana
      color white
      text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -webkit-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -moz-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -o-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -ms-text-shadow -1px -1px 0 rgba(0,0,0,0.5)

      width 95px
      text-align center
      padding-top 7px

    .progress
      position absolute
      left 99px
      top 3px
      width 359px
      height 23px

      .done
        width 0
        height 23px
        background url('../assets/images/level-progress-done.png') repeat-x
        position absolute
        top 0
        left 0

  .level-complete
    font normal 40px 'Enriqueta', serif
    color white
    position absolute
    top 200px
    left 0
    width 640px
    text-align center

    display none

  .level-complete-detail
    font normal 20px 'Enriqueta', serif
    color white
    position absolute
    top 250px
    left 0
    width 640px
    text-align center

    display none

  div.continue
    font bold 20px 'Enriqueta', serif

    position absolute
    top 350px
    left 0
    width 640px
    text-align center
    
    color #a8b4e3
    text-shadow 0 0 7px rgba(#233882, 0.75)
    -webkit-text-shadow 0 0 7px rgba(#233882, 0.75)
    -moz-text-shadow 0 0 7px rgba(#233882, 0.75)
    -o-text-shadow 0 0 7px rgba(#233882, 0.75)
    -ms-text-shadow 0 0 7px rgba(#233882, 0.75)

    display none


  .info-box
    background #a2a2a2
    background -moz-linear-gradient(top, #a2a2a2 0%, #404040 100%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#a2a2a2), color-stop(100%,#404040))
    background -webkit-linear-gradient(top, #a2a2a2 0%,#404040 100%)
    background -o-linear-gradient(top, #a2a2a2 0%,#404040 100%)
    background -ms-linear-gradient(top, #a2a2a2 0%,#404040 100%)
    background linear-gradient(to bottom, #a2a2a2 0%,#404040 100%)

    _border-radius(5px)

    width 461px

    position absolute
    top 10px
    left 50%
    margin-left -230px

    min-height 50px

    display none

    .close
      width 13px
      height 13px

      background url('../assets/images/info-close.png') no-repeat top center
      position absolute
      top 5px
      right 5px

      cursor pointer

    .icon
      position absolute
      top 0
      left 0

      font bold 30px 'Enriqueta', sans
      text-align center
      color rgba(black, 0.23)

      background rgba(black, 0.13)

      width 40px
      height 40px

      _border-bottom-right-radius(5px)
      _border-top-left-radius(5px)

    .text
      padding 10px 5px 12px 5px
      font bold 12px 'Enriqueta', sans
      color white

      text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -webkit-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -moz-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -o-text-shadow -1px -1px 0 rgba(0,0,0,0.5)
      -ms-text-shadow -1px -1px 0 rgba(0,0,0,0.5)

      margin-left 60px

@import '_splashscreen'
@import '_ingamemenu'